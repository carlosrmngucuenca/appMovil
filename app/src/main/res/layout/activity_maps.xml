<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center"
    android:orientation="vertical"
    tools:context="com.example.danny.autov2.MapsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_trazaderuta_Mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIBUJAR" />

        <Button
            android:id="@+id/btn_GuardarRtuta_Mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDAR" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_cantidad_asientos_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Asientos"
            />
        <EditText
            android:id="@+id/et_costo_asiento_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Costo"
            />






    </LinearLayout>








    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.danny.autov2.MapsActivity" />


</LinearLayout>


