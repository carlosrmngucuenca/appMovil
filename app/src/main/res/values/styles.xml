<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texto_titulo</item>
    </style>

    <style name="boton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">@dimen/anchoboton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/altomiboton</item>
        <item name="android:layout_margin">@dimen/marjenboton</item>
        <item name="android:textSize">@dimen/texto_boton</item>
        <item name="android:textColor">#FFFDFDFD</item>
        <item name="android:background">@drawable/botones</item>
        <!--item name="android:onClick">aJugar</item-->



    </style>

    <style name="Imagen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/imagensesion</item>
        <item name="android:layout_margin">2dp</item>


    </style>

    <style name="CajasdeTexto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">@dimen/ancho_cajatexto</item>
        <item name="android:layout_height">@dimen/alto_cajatexto</item>
        <item name="android:minHeight">@dimen/alto_cajatexto</item>
        <item name="android:layout_margin">@dimen/PaddingCajasDeTexto</item>


    </style>

    <style name="Mensajes">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/PaddingTitulosCajas</item>
        <item name="android:textSize">@dimen/texto_titulo</item>
    </style>

</resources>
